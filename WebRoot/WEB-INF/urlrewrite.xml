<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>
    <rule>
    	<!-- 博客显示 -->
        <from>^/blog/detail-([0-9]+).html</from>
        <to>/blog?action=detail&amp;pageId=$1</to>
    </rule>
	<rule>
		<!-- 博客列表 -->
        <from>^/blog/list/([0-9]+)</from>
        <to>/blog?action=list&amp;page=$1</to>
    </rule>
    <rule >
    	<!-- 管理的动态页面 -->
        <from>^/blog/add/</from>
        <to>/blog?action=add</to>
    </rule>
    	<!-- 管理的 -->
      <rule>
        <from>^/manage/list/([0-9]+)</from>
       <to>/manage?action=list&amp;page=$1</to>
    </rule>
      <rule>
        <from>^/manage/delete/([0-9]+)</from>
       <to>/manage?action=delete&amp;pageId=$1</to>
    </rule>
    <rule>
        <from>^/manage/update/([0-9]+)</from>
       <to>/manage?action=update&amp;pageId=$1</to>
    </rule>
      <rule>
        <from>^/manage/class/delete/([0-9]+)</from>
       <to>/manage/class?action=delete&amp;classId=$1</to>
    </rule>
     <rule>
        <from>^/manage/class/([a-zA-Z]+)</from>
       <to>/manage/class?action=$1</to>
    </rule>
  
</urlrewrite>

